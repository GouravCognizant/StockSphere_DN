@{
    ViewData["Title"] = "Home";
}

@* Using the background image style from the 'About' page structure with a dark overlay for text readability *@
<div class="container-fluid py-5 mb-5" style="background: linear-gradient(rgba(0, 58, 102, 0.7), rgba(0, 58, 102, 0.7)), url('/img/about-5.jpg'); background-position: center center; background-repeat: no-repeat; background-size: cover;">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-7 text-center text-lg-start">
                <h4 class="text-white text-uppercase fw-bold mb-4">Welcome To StockSphere</h4>
                <h1 class="display-4 text-white mb-4">Invest your money with higher return</h1>
                <p class="text-white mb-5 fs-5">Trade equities with real-time market insights, secure transactions, and a seamless user experience. Track markets, manage your portfolio, and grow your wealth with confidence.</p>
                <div class="d-flex justify-content-center justify-content-lg-start">
                    <a class="btn btn-light rounded-pill py-3 px-5 me-3" href="#">Learn More</a>
                    <a class="btn btn-primary rounded-pill py-3 px-5" href="#">Contact Us</a>
                </div>
            </div>
            <div class="col-lg-5 d-none d-lg-block">
                @* Image appearing on the right side of the hero header *@
                <img src="~/img/about-2.png" class="img-fluid animated zoomIn" alt="Hero Image">
            </div>
        </div>
    </div>
</div>
<div class="container-fluid about py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-xl-7 wow fadeInLeft" data-wow-delay="0.2s">
                <div>
                    <h4 class="text-primary">About Us</h4>
                    <h1 class="display-5 mb-4">Meet our company unless miss the opportunity</h1>
                    <p class="mb-4">Empowering investors with smart tools, real-time insights, and a secure trading experience. We simplify equity trading so you can focus on growing your wealth.</p>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div><i class="fas fa-lightbulb fa-3x text-primary"></i></div>
                                <div class="ms-4">
                                    <h4>Business Consulting</h4>
                                    <p>Expert guidance to help investors make informed decisions.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div><i class="bi bi-bookmark-heart-fill fa-3x text-primary"></i></div>
                                <div class="ms-4">
                                    <h4>Year Of Expertise</h4>
                                    <p>Years of hands-on experience in equity markets.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 mt-4">
                            <a href="#" class="btn btn-primary rounded-pill py-3 px-5">Discover Now</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-5 wow fadeInRight" data-wow-delay="0.2s">
                @* Right side images with Z-index fix for overlapping *@
                <div class="position-relative overflow-hidden rounded" style="min-height: 400px;">
                    @* Large Main Image *@
                    <div class="rounded overflow-hidden shadow" style="width: 90%; height: 350px;">
                        <img src="~/img/about-2.png" class="img-fluid w-100 h-100" style="object-fit: cover;" alt="">
                    </div>
                    @* Small Badge Pattern *@
                    <div style="position: absolute; top: -10px; right: 0; z-index: 2;">
                        <img src="~/img/about-3.png" class="img-fluid" style="width: 120px; height: 120px; opacity: 0.8;" alt="">
                    </div>
                    @* Bottom Overlapping Image *@
                    <div class="position-absolute" style="bottom: 0; right: 0; width: 65%; height: 180px; z-index: 3;">
                        <div class="rounded overflow-hidden border border-5 border-white shadow">
                            <img src="~/img/about-5.jpg" class="img-fluid w-100 h-100" style="object-fit: cover;" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid service pb-5">
    <div class="container pb-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Our Services</h4>
            <h1 class="display-5 mb-4">We provide the best offers</h1>
            <p class="mb-0">Reliable equity trading services designed to simplify investing and improve decision-making.</p>
        </div>
        <div class="row g-4">
            @* Service Card 1 *@
            <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.2s">
                <div class="service-item bg-light rounded d-flex flex-column h-100">
                    <div class="service-img" style="height: 230px; overflow: hidden;">
                        <img src="~/img/service-1.jpg" class="img-fluid rounded-top w-100 h-100" style="object-fit: cover;" alt="">
                    </div>
                    <div class="p-4 flex-grow-1">
                        <a href="#" class="h4 d-inline-block mb-3">Equity Trading</a>
                        <p class="mb-4">Buy and sell stocks with real-time market data and fast order execution.</p>
                        <a class="btn btn-primary rounded-pill py-2 px-4" href="#">Learn More</a>
                    </div>
                </div>
            </div>
            @* Service Card 2 *@
            <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.4s">
                <div class="service-item bg-light rounded d-flex flex-column h-100">
                    <div class="service-img" style="height: 230px; overflow: hidden;">
                        <img src="~/img/service-2.jpg" class="img-fluid rounded-top w-100 h-100" style="object-fit: cover;" alt="">
                    </div>
                    <div class="p-4 flex-grow-1">
                        <a href="#" class="h4 d-inline-block mb-3">Market Analysis</a>
                        <p class="mb-4">Access real-time charts and trends to track market movements.</p>
                        <a class="btn btn-primary rounded-pill py-2 px-4" href="#">Learn More</a>
                    </div>
                </div>
            </div>
            @* Service Card 3 *@
            <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.6s">
                <div class="service-item bg-light rounded d-flex flex-column h-100">
                    <div class="service-img" style="height: 230px; overflow: hidden;">
                        <img src="~/img/service-3.jpg" class="img-fluid rounded-top w-100 h-100" style="object-fit: cover;" alt="">
                    </div>
                    <div class="p-4 flex-grow-1">
                        <a href="#" class="h4 d-inline-block mb-3">Investment Advisory</a>
                        <p class="mb-4">Get expert guidance tailored to your investment goals.</p>
                        <a class="btn btn-primary rounded-pill py-2 px-4" href="#">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>