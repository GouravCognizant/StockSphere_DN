@* Remove @page because we are using AccountController *@
@{
    Layout = null;
    // Get the role from the ViewBag passed by the Controller
    var selectedRole = ViewBag.Role ?? "User";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>StockSphere - @selectedRole Login</title>

    @* Font Awesome for GitHub Icon *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    @* Volt CSS *@
    <link rel="stylesheet" href="~/css/volt.css" asp-append-version="true">
</head>

<body>
    <main>
        <section class="vh-lg-100 mt-5 mt-lg-0 bg-soft d-flex align-items-center">
            <div class="container">
                <p class="text-center">
                    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center justify-content-center">
                        <svg class="icon icon-xs me-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                        </svg>
                        Back to homepage
                    </a>
                </p>

                <div class="row justify-content-center form-bg-image" style="background-image: url('@Url.Content("~/assets/img/illustrations/signin.svg")');">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <div class="bg-white shadow border-0 rounded border-light p-4 p-lg-5 w-100 fmxw-500">

                            <div class="text-center text-md-center mb-4 mt-md-0">
                                <h1 class="mb-0 h3">Sign in as @selectedRole</h1>
                                @if (selectedRole != "User")
                                {
                                    <span class="badge bg-secondary mt-2">Internal Portal</span>
                                }
                                <p class="text-gray-600 small mt-2">Enter your @selectedRole credentials below</p>
                            </div>

                            @* Validation Summary *@
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger py-2 small shadow-sm border-start border-4 border-danger">
                                    <div asp-validation-summary="All" class="mb-0"></div>
                                </div>
                            }

                            <form asp-controller="Account" asp-action="Login" method="post" class="mt-4">
                                @Html.AntiForgeryToken()

                                <input type="hidden" name="Role" value="@selectedRole" />

                                <div class="form-group mb-4">
                                    <label for="email">Your Email</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-envelope text-gray-600"></i>
                                        </span>
                                        <input type="email" class="form-control" placeholder="example@company.com" id="email" autofocus required name="email">
                                    </div>
                                </div>

                                <div class="form-group mb-4">
                                    <label for="password">Your Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-unlock-alt text-gray-600"></i>
                                        </span>
                                        <input type="password" placeholder="Password" class="form-control" id="password" required name="password">
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between align-items-top mb-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="remember" name="remember">
                                        <label class="form-check-label mb-0" for="remember">Remember me</label>
                                    </div>
                                    <div><a href="#" class="small text-right">Lost password?</a></div>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-gray-800">Sign in to Dashboard</button>
                                </div>
                            </form>

                            <div class="mt-3 mb-4 text-center">
                                <span class="fw-normal">or login with</span>
                            </div>

                            @* --- Updated Social Icons: Google and GitHub --- *@
                            <div class="d-flex justify-content-center my-4">
                                @* Google Icon *@
                                <a href="#" class="btn btn-icon-only btn-pill btn-outline-gray-500 me-2" title="Login with Google">
                                    <svg class="icon icon-xxs" aria-hidden="true" focusable="false" data-prefix="fab" data-icon="google" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 488 512">
                                        <path fill="currentColor" d="M488 261.8C488 403.3 391.1 504 248 504 110.8 504 0 393.2 0 256S110.8 8 248 8c66.8 0 123 24.5 166.3 64.9l-67.5 64.9C258.5 52.6 94.3 116.6 94.3 256c0 86.5 69.1 156.6 153.7 156.6 98.2 0 135-70.4 140.8-106.9H248v-85.3h236.1c2.3 12.7 3.9 24.9 3.9 41.4z"></path>
                                    </svg>
                                </a>

                                @* GitHub Icon *@
                                <a href="#" class="btn btn-icon-only btn-pill btn-outline-gray-500" title="Login with GitHub">
                                    <i class="fab fa-github"></i>
                                </a>
                            </div>

                            <div class="d-flex justify-content-center align-items-center mt-4">
                                <span class="fw-normal">
                                    Not registered? <a asp-controller="Account" asp-action="Register" class="fw-bold text-underline">Create account</a>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    @* Scripts *@
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
    <script src="~/assets/js/volt.js"></script>
</body>
</html>