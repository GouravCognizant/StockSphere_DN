@* Remove @page because we are using AccountController *@
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>StockSphere - Create Account</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/volt.css" asp-append-version="true">

    <style>
        /* Hidden by default, shows as a single line */
        #complexity-instruction {
            display: none;
            font-size: 0.75rem;
            line-height: 1.2;
        }

        #password-instruction {
            display: none;
            font-size: 0.85rem;
        }
    </style>
</head>

<body>
    <main>
        <section class="vh-lg-100 mt-5 mt-lg-0 bg-soft d-flex align-items-center">
            <div class="container">
                <p class="text-center">
                    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center justify-content-center">
                        <svg class="icon icon-xs me-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path></svg>
                        Back to homepage
                    </a>
                </p>

                <div class="row justify-content-center form-bg-image" style="background-image: url('@Url.Content("~/assets/img/illustrations/signin.svg")');">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <div class="bg-white shadow border-0 rounded border-light p-4 p-lg-5 w-100 fmxw-500">
                            <div class="text-center text-md-center mb-4 mt-md-0">
                                <h1 class="mb-0 h3">Create Account</h1>
                                <p class="text-gray-600 small mt-2">Join StockSphere to start trading</p>
                            </div>

                            <form id="registerForm" asp-controller="Account" asp-action="Register" method="post" class="mt-4">
                                @Html.AntiForgeryToken()

                                <div class="form-group mb-4">
                                    <label for="email">Your Email</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-envelope text-gray-600"></i></span>
                                        <input type="email" class="form-control" placeholder="example@company.com" id="email" name="Email" required>
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="password">Your Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-unlock-alt text-gray-600"></i></span>
                                        <input type="password" placeholder="Password" class="form-control" id="password" name="Password" required>
                                    </div>
                                    @* Single line complexity instruction *@
                                    <div id="complexity-instruction" class="text-danger mt-2">
                                        <i class="fas fa-exclamation-circle me-1"></i> Use 8+ characters with a mix of letters, numbers & symbols.
                                    </div>
                                </div>

                                <div class="form-group mb-2">
                                    <label for="confirm_password">Confirm Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-unlock-alt text-gray-600"></i></span>
                                        <input type="password" placeholder="Confirm Password" class="form-control" id="confirm_password" name="ConfirmPassword" required>
                                    </div>
                                    <div id="password-instruction" class="text-danger mt-2">
                                        <i class="fas fa-info-circle me-1"></i> Passwords do not match!
                                    </div>
                                </div>

                                <div class="mb-4 mt-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="true" id="terms" name="AgreeTerms" required>
                                        <label class="form-check-label fw-normal mb-0" for="terms">
                                            I agree to the <a href="#" class="fw-bold">terms and conditions</a>
                                        </label>
                                    </div>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" id="submitBtn" class="btn btn-gray-800" disabled>Sign up</button>
                                </div>
                            </form>

                            <div class="d-flex justify-content-center align-items-center mt-4">
                                <span class="fw-normal">
                                    Already have an account? <a asp-controller="Account" asp-action="Login" class="fw-bold">Login here</a>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            const password = $('#password');
            const confirmPassword = $('#confirm_password');
            const matchInstruction = $('#password-instruction');
            const complexityInstruction = $('#complexity-instruction');
            const submitBtn = $('#submitBtn');

            function validateForm() {
                const val = password.val();

                // Password rules
                const hasLength = val.length >= 8;
                const hasAlpha = /[a-zA-Z]/.test(val);
                const hasNumber = /[0-9]/.test(val);
                const hasSpecial = /[!@@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]/.test(val);

                const isComplexEnough = hasLength && hasAlpha && hasNumber && hasSpecial;

                // Show/Hide Complexity Warning
                if (val !== "" && !isComplexEnough) {
                    complexityInstruction.show();
                    password.addClass('is-invalid');
                } else {
                    complexityInstruction.hide();
                    password.removeClass('is-invalid');
                    if(isComplexEnough) password.addClass('is-valid');
                }

                // Match Validation
                const passwordsMatch = (val === confirmPassword.val()) && val !== "";
                if (confirmPassword.val() !== "" && !passwordsMatch) {
                    matchInstruction.show();
                    confirmPassword.addClass('is-invalid');
                } else {
                    matchInstruction.hide();
                    confirmPassword.removeClass('is-invalid');
                    if(passwordsMatch) confirmPassword.addClass('is-valid');
                }

                // Final Button State
                submitBtn.prop('disabled', !(isComplexEnough && passwordsMatch));
            }

            password.on('keyup', validateForm);
            confirmPassword.on('keyup', validateForm);
        });
    </script>
</body>
</html>